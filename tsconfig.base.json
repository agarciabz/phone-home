{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@phonehome/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@phonehome/features/phone/components/phone-form": [
        "libs/features/phone/components/phone-form/src/index.ts"
      ],
      "@phonehome/features/phone/phone-create": [
        "libs/features/phone/containers/phone-create/src/index.ts"
      ],
      "@phonehome/features/phone/phone-detail": [
        "libs/features/phone/containers/phone-detail/src/index.ts"
      ],
      "@phonehome/features/phone/phone-list": [
        "libs/features/phone/containers/phone-list/src/index.ts"
      ],
      "@phonehome/ui/phone-item": ["libs/ui/phone-item/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
